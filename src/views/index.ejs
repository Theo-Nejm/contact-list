<%- include('./includes/head') %>
<%- include('./includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Public agenda</h1>
          <p class="text-center lead"> Um lugar para adicionar novas pessoas à agenda!</p>
          <hr>
          <p class="text-center">Adicione pessoas à agenda pública e faça novos contatos!</p>
          <hr>

          <%- include('./includes/messages') %>

          <% if(contacts.length > 0 ) { %>
          <div class="responsive-table">
            <table class="table my-3">
              <% contacts.forEach(contact => { %>
                <tr>
                  <td><%= contact.name %></td>
                  <td><%= contact.surname %></td>
                  <td><%= contact.number %></td>
                  <td><%= contact.email %></td>
                  <td><a href="/contact/index/<%= contact.id %>">Editar</a></td>
                  <td><a class="text-danger "href="/contact/delete/<%= contact.id %>">Excluir</a></td>
                </tr>
              <% }) %>
            </table>
          </div>
          <% } else { %>
          <p class="text-center lead">Nenhum contato foi adicionado ainda...</p>  
          <% } %>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

<%- include('./includes/footer') %>